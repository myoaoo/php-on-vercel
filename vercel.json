{
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/api/source/(.*)\\.html$",
            "dest": "/api/source/$1.html"
        },
        {
            "src": "/api/source/(.*)\\.css$",
            "dest": "/api/source/$1.css"
        },
        {
            "src": "/api/source/images/(.*)\\.(png|jpg|jpeg|gif|svg)$",
            "dest": "/api/source/images/$1.$2"
        },
        {
            "src": "/api/source/_posts/(.*)\\.md$",
            "dest": "/api/markdown.php?file=_posts/$1.md"
        },
        {
            "src": "/api/source/(.*)\\.md$",
            "dest": "/api/markdown.php?file=$1.md"
        },
        {
            "src": "/(.*)",
            "dest": "/api/$0"
        }
    ]
}